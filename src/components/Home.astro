---
import GitHub from "./logos/GitHub.astro";
import LinkedIn from "./logos/LinkedIn.astro";
import Twitter from "./logos/Twitter.astro";
---

<section id="home">
  <div
    class="min-h-[400px] flex items-center 2xl:justify-start pt-40 w-full max-w-3xl m-auto text-center sm:w-3/4 xl:w-4/6 2xl:w-3/5 xl:px-0 sm:text-left"
  >
    <article class="text-left">
      <h1
        class="px-6 text-5xl font-bold leading-normal tracking-tight text-white sm:px-0 text-effect"
      >
        Tristan <span class="gradient">Vidal</span>
      </h1>
      <div
        class="max-w-lg px-6 pb-1 mb-1 text-xl tracking-tight text-[#f2f2f2] sm:px-0"
      >
        <p>
          Critical thinking, decision making and problem solving skills.
          <span class="text-blue">Front-end</span>
          developer committed to delivering high-quality reliable products and take
          a <span class="text-blue">thorough view of the business</span> and functionalities
          of the projects I work on.
        </p>
        <p class="mt-3 font-bold tracking-tight">
          <span class="">Contact me at</span>
          <a
            href="mailto:tres@duck.com"
            class="text-blue hover:text-[#00DFD8] transition duration-300"
            >tres@duck.com</a
          >
        </p>
      </div>
      <div
        class="flex items-center justify-start gap-6 px-6 mt-4 text-gray 2xl:align-baseline 2xl:justify-start sm:px-0"
      >
        <a
          title="Twitter"
          href="https://twitter.com/surddle"
          target="_blank"
          rel="noopener noreferrer"
        >
          <Twitter />
        </a>
        <a
          title="GitHub"
          href="https://github.com/surdle"
          target="_blank"
          rel="noopener noreferrer"
        >
          <GitHub />
        </a>
        <a
          title="LinkedIn"
          href="https://linkedin.com/in/tri"
          target="_blank"
          rel="noopener noreferrer"
        >
          <LinkedIn />
        </a>
        <a
          title="View resume"
          href="https://resume.surdle.com"
          target="_blank"
          rel="noopener noreferrer"
        >
          <div
            class="text-white hover:text-[#000] px-4 py-1.5 border border-blue p-1 rounded-lg shadow-xl hover:shadow-[#007dfb42] hover:saturate-150 transition duration-500 hover:bg-blue text-center tracking-tight flex items-center"
          >
            <svg
              stroke="currentColor"
              fill="currentColor"
              stroke-width="0"
              viewBox="0 0 512 512"
              class="w-4 h-[2rem] duration-0 mr-2"
              xmlns="http://www.w3.org/2000/svg"
              ><path
                d="M432,320H400a16,16,0,0,0-16,16V448H64V128H208a16,16,0,0,0,16-16V80a16,16,0,0,0-16-16H48A48,48,0,0,0,0,112V464a48,48,0,0,0,48,48H400a48,48,0,0,0,48-48V336A16,16,0,0,0,432,320ZM488,0h-128c-21.37,0-32.05,25.91-17,41l35.73,35.73L135,320.37a24,24,0,0,0,0,34L157.67,377a24,24,0,0,0,34,0L435.28,133.32,471,169c15,15,41,4.5,41-17V24A24,24,0,0,0,488,0Z"
              ></path>
            </svg>
            <div>View resume</div>
          </div>
        </a>
      </div>
    </article>
  </div>
</section>

<style>
  :global(svg:hover) {
    transition: 0.3s;
  }

  /* section {
    background: radial-gradient(
      ellipse 50% 50% at 70% 50%,
      rgba(29, 46, 204, 0.152),
      rgba(255, 255, 255, 0)
    );
  } */

  :global(.text-effect) {
    background: -webkit-linear-gradient(#ffffff, #9f9f9f);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
  }

  h1 {
    animation: 1000ms ease 0s 1 normal backwards running tres;
  }

  p {
    animation: 1000ms ease 400ms 1 normal backwards running tres;
  }

  a {
    animation: 1000ms ease 400ms 1 normal backwards running tres;
  }

  @keyframes tres {
    0% {
      opacity: 0;
      transform: translateY(-10px);
    }
    100% {
      opacity: 1;
      transform: none;
    }
  }

  .text-gradient {
    font-weight: 900;
    background-image: var(--astro-gradient);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-size: 100% 200%;
    background-position-y: 100%;
    border-radius: 0.4rem;
    animation: pulse 1s ease-in-out infinite;
  }

  .gradient {
    animation: flow 5s ease-in-out infinite;
    background: linear-gradient(90deg, #0058fb, #00dfd8);
    background-size: 300%;
    -webkit-background-clip: text;
    background-clip: text;
    -webkit-text-fill-color: transparent;
  }
  @keyframes flow {
    0% {
      background-position: 0% 50%;
    }
    50% {
      background-position: 100% 50%;
    }
    100% {
      background-position: 0% 50%;
    }
  }
</style>
